{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':enablePreCommit',
    ':rebaseStalePrs',
  ],
  labels: [
    'dependencies',
  ],
  schedule: [
    'before 5am on saturday',
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
    },
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: [
      'before 5am on saturday',
    ],
  },
}
